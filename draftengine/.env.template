# Draft Engine Environment Variables
# Copy this file to .env and fill in your values

# Google Sheets Spreadsheet ID
SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# Firebase Credentials Path (relative to the mounted volume in Docker)
# This should point to where your credentials file will be on the target machine
FIREBASE_CREDENTIALS_PATH=/app/credentials/firebase-credentials.json

# Directory on host machine containing Firebase credentials
# This is where you'll place your firebase-credentials.json file on the target machine
CREDENTIALS_DIR=./credentials

# Optional: Server port (default is 8080)
# SERVER_PORT=8080
